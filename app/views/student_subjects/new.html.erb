<h2>Add Classes</h2>
<p class="page-links"><%= link_to "Cancel", root_path %></p>

<%= render partial: "layouts/errors", locals: {object: @student_subject} %>

<%= form_for @student_subject do |f| %>
    <%= f.select("subject_id", Subject.all.collect {|p| [ p.title, p.id ] }, { prompt: "Select a Subject" }) %>
    <%= f.hidden_field :user_id %>
    <%= f.submit "Add subject" %>
<% end %>
