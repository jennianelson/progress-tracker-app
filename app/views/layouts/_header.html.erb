<nav class="">
    <% if !current_user %>
        <%= link_to "Sign up", new_user_registration_path %> / <%= link_to "Log in", new_user_session_path %>
    <% else %>
         <% if policy(Subject).create? %>
            <p><b><%= link_to "Progress Tracker", root_path %></b> | <%= link_to "All Subjects", subjects_path %> | <%= link_to "Standards List", standards_path %></p> 
        <% else %>
            <p><b><%= link_to "Progress Tracker", root_path %></b></p>
        <% end %>
        <% if current_user.username %>
            Hi, <b><%= current_user.username %>!</b>
        <% else %>
            You are a <%= current_user.role %> signed in as <b><%= current_user.email %></b>.
        <% end %>
        <br>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete %> 
        <br>
    <% end %>
    
</nav>