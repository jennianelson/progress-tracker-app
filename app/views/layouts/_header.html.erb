<nav class="">
    <h3><%= link_to "Progress Tracker", root_path %></h3> 
    <% if !current_user %>
        <%= link_to "Sign up", new_user_registration_path %> / <%= link_to "Log in", new_user_session_path %>
    <% else %>
        <% if current_user.username %>
            Hi, <b><%= current_user.username %>!</b>
        <% else %>
            You are signed in as <b><%= current_user.email %></b>.
        <% end %>
        <br>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete %> 
        <br>
    <% end %>
    <p><%= link_to "My Subjects", subjects_path %> | </p>
</nav>