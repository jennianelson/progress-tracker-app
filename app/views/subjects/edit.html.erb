<h2>Edit <%= @subject.title %> </h2>
<%= link_to "Cancel", subject_path(@subject) %> <br> <br>
<% if policy(@subject).destroy? %>
    <%= button_to "Delete Subject", subject_path, method: "delete" %>
<% end %>
<br>

<%= render partial: "layouts/errors", locals: {object: @subject} %>

<% if @subject.errors.any? %>
    <%=link_to "OK", edit_subject_path(@subject)%>
<% else %>
    <%= form_for @subject do |f| %>
        <%= render partial: "form", locals: {f: f} %>
    <% end %>
<%end%>
