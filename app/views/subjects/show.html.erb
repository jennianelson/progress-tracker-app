<h2><%= @subject.title %></h2>
<i><% if policy(@subject).update? %>
        <%= link_to "Edit Subject", edit_subject_path(@subject) %> |
<% end %>
<%= link_to "Back to All Subjects", subjects_path %> </i>

<% @subject.sections.each do |section| %>
    <h3><%= section.title %> <i><%= link_to "Add standards to this section", edit_section_path(section) if policy(@subject).update? %></i></h3>
    <% if section.standards.present? %>
        <% sort_standards(section.standards).each do |standard| %>
        <ul>
            <li style="<%= display_sub_standard(standard) %>"> <%= link_to "edit", edit_subject_standard_path(@subject, standard) if policy(@subject).update?%> <%= standard.dot_notation %> <%= standard.description %> 
            </li>
        </ul>
        <% end %>
    <% end %>
<% end %>