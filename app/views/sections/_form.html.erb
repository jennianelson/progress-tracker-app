<% @sections.each do |section| %>
    <%= form_for section do |f| %>
        <%= f.collection_select :subject_id, Subject.all, :id, :title, prompt: true %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :abbreviation %>
        <%= f.text_field :abbreviation %>
        <%= f.submit %>
    <% end %>
<% end %>