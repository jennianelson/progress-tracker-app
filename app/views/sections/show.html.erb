    <% @student_standards.each do |ss| %>
        <% if ss.id != nil %>
        <tr>
            <td><%= ss.description %> </td>
                <td><%= ss.progress_level %></td>
                <td><%= ss.comments %></td>
                <td><%= ss.evidence %></td>
                <td>Edit Progress</td>
        </tr>
        <% end %>
    <% end %>
 </table> <br>

