
<%= render partial: "layouts/errors", locals: {object: @skill} %>

<%= form_for @skill do |f| %>
    <%= f.text_area :description %> <br>
    <%= f.hidden_field :section_id %>
    <%= f.submit %>
<% end %>
<%= button_to "Delete Skill", skill_path(@skill), method: 'delete' %>
<%= link_to "Cancel", section_path(@skill.section) %>